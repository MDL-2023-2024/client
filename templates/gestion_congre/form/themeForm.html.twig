{% block formAtelier %}
	<div class="d-none form-of-menu" form-for="theme">
		{% if themeForm is null %}
			<span class="d-block alert alert-danger w-100">Veuillez mettre cr√©e un atelier</span>
		{% else %}
			{{ form_start(themeForm) }}
			{{ form_row(themeForm.libelle) }}
			{{ form_label(themeForm.ateliers) }}
			<div class="row">
				<div class="col-md-4">
					{% for atelier in themeForm.ateliers %}
						{% if loop.index0 % 3 == 0 %}
							{{ form_row(atelier) }}
						{% endif %}
					{% endfor %}
				</div>
				<div class="col-md-4">
					{% for atelier in themeForm.ateliers %}
						{% if loop.index0 % 3 == 1 %}
							{{ form_row(atelier) }}
						{% endif %}
					{% endfor %}
				</div>
				<div class="col-md-4">
					{% for atelier in themeForm.ateliers %}
						{% if loop.index0 % 3 == 2 %}
							{{ form_row(atelier) }}
						{% endif %}
					{% endfor %}
				</div>
			</div>
			{{ form_row(themeForm.enregistrer) }}
			{{ form_end(themeForm) }}
		{% endif %}
	</div>
{% endblock %}
