{% extends 'base.html.twig' %}

{% block title %}Hello GestionCongreController!
{% endblock %}
{% block javascripts %}
	<script src="{{ asset('js/vacationFormEdit.js') }}"></script>
{% endblock %}

{% set error_flashes = app.flashes('error') %}

{% block body %}
	<div class="container flex-grow-1 d-flex justify-content-center align-items-center">
		<div class="card w-100">
			<div class="card-body">
				<div class="row justify-content-center align-items-center h-100">
					<h2 class="text-center">Modifier une vacation</h2>
					<a href="{{ path('gestion_edit_vacation') }}" class="btn btn-secondary m-auto" style="width: 10%;">Retour</a>
					<div id="notif-info">
						{% for flash in app.flashes('success') %}
							<div class="alert alert-success w-100" id="notif-info">{{ flash }}</div>
						{% endfor %}
						{% if error_flashes|length > 0 %}
							<div class="alert alert-danger">
								{% for error in error_flashes %}
									<p>{{ error }}</p>
								{% endfor %}
							</div>
						{% endif %}
					</div>
					{% include "gestion_congre/form/vacationForm.html.twig"  with {'show': true} %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
