{% extends 'base.html.twig' %}

{% block title %}Maison des ligues
{% endblock %}

{% block body %}
	{# <link rel="stylesheet" href="{{ asset('css/menu/style.css') }}"> #}
	<section class="container pt-5 bg-light pb-3">
		{% for flash in app.flashes('error') %}
			<div class="alert alert-danger w-100">{{ flash }}</div>
		{% endfor %}
		{% for flash in app.flashes('success') %}
			<div class="alert alert-success w-100">{{ flash }}</div>
		{% endfor %}
		<h1 class="text-center">6ème Assises de l'escrimes</h1>
		<h3 class="text-center">Le 7 et 8 Septembre 2024</h3>
		<div class="row align-items-start">
			<div class="col-6">
				<img style="width : 40%;" class="mx-auto img-fluid d-block" src="{{ asset('img/affiche.jpg') }}" ald="Affiche du congrès">
				<h3 class="text-center mt-2">
					<span class="badge text-bg-info">Frais d'inscription au congrés : 130€
					</span>
				</h3>
			</div>
			<div class="col-6">
				<table class="table table-striped table-hover table-bordered">
					<thead>
						<tr>
							<th scope="col-6">Thèmes</th>
							<th scope="col-6">Atelier</th>
						</tr>
					</thead>
					<tbody>
                        {% for theme in themes %}
                            <tr>
                                <td>{{ theme.libelle }}</td>
                                <td>
                                    {% for atelier in theme.ateliers %}
                                        {{ atelier.libelle }} ({{atelier.nbPlacesMaxi}} maximum)</br>
                                    {% endfor %}
                                </td>
                            </tr>
                        {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<div class="mt-5 row align-items-start">
			<h2 class="text-center mb-5">Informations Hébergement et restauration</h2>
			{% for hotel in hotels %}
				{% include "home/hotel.html.twig" with {'hotel':hotel} %}
			{% endfor %}

		</div>
		<h3>Tarif repas :</h3>
		<ul>
			<li>Repas accompagnant: 38€</li>
			<li>Note: Repas compris dans l'inscription du licencié.</li>
		</ul>
		<h2 class="text-center">Réservation possible pour :</h2>
		<div class="mt-4 row align-items-start justify-content-center text-center">
			<div class="col-1">
				<button class="btn btn-success">Samedi Midi</button>
			</div>
			<div class="col-1">
				<button class="btn btn-success">Samedi Soir</button>
			</div>
			<div class="col-1">
				<button class="btn btn-success">Dimanche Midi</button>
			</div>
		</div>
		<div class="mt-3 mb-3 row align-items-start justify-content-center text-center">
			<div class="col-2">
				<a href="{{ path('inscription') }}"><button class="btn btn-primary">S'inscrire maintenant</button></a>
			</div>
		</div>
	</section>
{% endblock %}
