{% extends 'base.html.twig' %}

{% block body %}

	<div class="container flex-grow-1">
		{% for flash in app.flashes('success') %}
			<div class="alert alert-success w-100">{{ flash }}</div>
		{% endfor %}
		<div class="row justify-content-center align-items-center h-100">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						{% block form %}{% endblock %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
