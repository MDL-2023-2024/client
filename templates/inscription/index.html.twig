{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!
{% endblock %}

{% block body %}
	<section class="container pt-5 bg-light pb-3">
		{% for flash in app.flashes('error') %}
			<div class="alert alert-danger w-100">{{ flash }}</div>
		{% endfor %}
		{% for flash in app.flashes('success') %}
			<div class="alert alert-success w-100">{{ flash }}</div>
		{% endfor %}
		<div class="row align-items-start">
			<div class="row">
				{{ form_start(form) }}
				<h3>{{ form_label(form.ateliers) }}</h3>
				<div class="row">
					<div class="col-md-4">
						{% for atelier in form.ateliers %}
							{% if loop.index % 3 == 1 %}
								{{ form_widget(atelier) }}
								{{ form_label(atelier) }}
							{% endif %}
						{% endfor %}
					</div>
					<div class="col-md-4">
						{% for atelier in form.ateliers %}
							{% if loop.index % 3 == 2 %}
								{{ form_widget(atelier) }}
								{{ form_label(atelier) }}
							{% endif %}
						{% endfor %}
					</div>
					<div class="col-md-4">
						{% for atelier in form.ateliers %}
							{% if loop.index % 3 == 0 %}
								{{ form_widget(atelier) }}
								{{ form_label(atelier) }}
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="row mt-4">
				{% for nuite in form.nuites %}
					<div class="col">
						{{form_start(nuite)}}
						{% set dateString = nuite.dateNuitee.vars.value.date.day ~ '-' ~ nuite.dateNuitee.vars.value.date.month ~ '-' ~ nuite.dateNuitee.vars.value.date.year %}
						<h3 class="text-center">Nuitée du
							{{dateString|format_datetime(pattern= 'dd MMM y', locale='fr')}}</h3>
						<div class="row">
							<div class="col">
								{{ form_row(nuite.categorie) }}
								{{ form_row(nuite.hotel) }}
							</div>
						</div>
						{{form_end(nuite)}}
					</div>
				{% endfor %}
			</div>
			<h3>
				Numéro de licence :
				<span>
					{{numLicence}}
				</span>
			</h3>
			<div>
				<label for="email">Email d'envoie :</label>
				<input type="email" id="email" name="email" value={{email}} required>
			</div>
			{{ form_end(form) }}
		</div>
	</section>
{% endblock %}
